
<h2 class=text-center>
  <%=@list.name%>
  <%if @list.is_favorite%>
  <span>
    <img src='https://cdn.iconscout.com/icon/free/png-512/star-bookmark-favorite-shape-rank-like-32386.png' style="width: 50px; height: 50px;">
  </span>
  <%end%>
</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    <%counter = 1 %>
    <%@list.items.each do |item|%>
      <tr>
        <th scope="row"><%=counter%></th>
        <td><%=item.name%></td>
        <td><%=item.description%></td>
      </tr>
      <%counter += 1%>
    <%end%>
  </tbody>
</table>

<br>

<div style="justify-content: center; text-align: center; display: flex">
  <a href=<%=edit_user_list_path(current_user, @list)%>><p class="btn btn-primary">Edit</p></a>
</div>
